---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import Linkedin from '../icons/Social/Linkedin.astro'
import Github from '../icons/Social/Github.astro'
import Social_icons from '../components/Social_icons.astro'
import Gmail from '../icons/Social/Gmail.astro'
import Section from '../components/Section.astro';
import Section_tecno from '../components/Section_tecno.astro';
import Tecnologias from '../components/Tecnologias.astro';

import Proyectos from '../components/Proyectos.astro'

import Sobre_mi from '../components/Sobre_mi.astro'

import Section_sobremi from '../components/Section_sobremi.astro'
import Footer from '../components/Footer.astro'
import Discord from '../icons/Social/Discord.astro'

---

<Layout title="Portfolio de Juli - Programadora Full-Stack"
description="Mi objetivo es aprender y mejorar constantemente, participando en proyectos innovadores que me permitan ampliar mis conocimientos y aportar soluciones creativas y efectivas.">
	<main class="px-4">
		<Section>
			<img class="rounded-full w-20 h-20 mb-4" 
			src="public/projects/MiFoto.jpeg" alt="Juli"
			/> 
		<h1 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-5 pb-6 lg:pb-10">
			Hola, Soy Julieta 
			<a href="https://www.linkedin.com/in/julieta-sotelo-54181a347" target="_blank" rel="noopener"> <div class="flex justify-center items-center hover:scale-110 transition">
				<Badge> Open To Work </Badge>
			</div><a/></h1>
		<h2 class="text-xl lg:text-2xl opacity-80 text-pretty max-w-{700px}">
			<span class="text-blue-300">Programador Full-Stack.</span> <br>Tengo 20 años, soy de Mendoza, Argentina ⛰️. Me especializo en desarrollo de software, siempre buscando aprender y mejorar. Mi objetivo es participar en proyectos innovadores que amplíen mis conocimientos y permitan aportar soluciones creativas y efectivas. Me interesa el diseño web y los diseños UML.
		</h2>
		<nav class="flex gap-x-5 mt-6 flex-wrap">
			<Social_icons href="https://www.linkedin.com/in/julieta-sotelo-54181a347/">
				<Linkedin class="size-4 md:size-6"/>
				LinkedIn
			</Social_icons>
			<Social_icons href="https://github.com/JuuSotelo">
				<Github class="size-4 md:size-6"/>
				GitHub
			</Social_icons>
			<Social_icons href="mailto:jsoteloanzorena@gmail.com">
				<Gmail class="size-4 md:size-6"/>
				jsoteloanzorena@gmail.com
			</Social_icons>
			<Social_icons href="https://discord.com/channels/@me/1359377640330625054">
				<Discord class="size-4 md:size-6"/>
				juuli_sotelo
			</Social_icons>
		</nav>
		</Section>
		<Section_tecno id="tecnologias">
			<Tecnologias/>
		</Section_tecno>
		<Section id="proyectos">
			<div class="flex justify-center">
				
			</div>
			<Proyectos/>
		</Section>
		
		
		<Section_sobremi id="sobre_mi">
			<div class="flex justify-center">
				
			</div>
			<Sobre_mi/>
		</Section_sobremi>
		<Footer/>
	</main>
	
</Layout>
